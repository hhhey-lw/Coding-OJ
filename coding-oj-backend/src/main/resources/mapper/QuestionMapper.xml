<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.longoj.top.infrastructure.mapper.QuestionMapper">

    <resultMap id="BaseResultMap" type="com.longoj.top.domain.entity.Question">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="answer" column="answer" jdbcType="VARCHAR"/>
        <result property="submitNum" column="submit_num" jdbcType="INTEGER"/>
        <result property="acceptedNum" column="accepted_num" jdbcType="INTEGER"/>
        <result property="judgeCase" column="judge_case" jdbcType="VARCHAR"/>
        <result property="judgeConfig" column="judge_config" jdbcType="VARCHAR"/>
        <result property="thumbNum" column="thumb_num" jdbcType="INTEGER"/>
        <result property="favourNum" column="favour_num" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,content,
        tags,answer,submit_num,
        accepted_num,judge_case,judge_config,
        thumb_num,favour_num,user_id,
        create_time,update_time,is_delete
    </sql>
    <update id="updateSubmitNum">
        UPDATE question
        SET submit_num = submit_num + 1
        WHERE id = #{questionId}
    </update>

    <update id="updateAcceptedNum">
        UPDATE question
        SET accepted_num = accepted_num + 1
        WHERE id = #{questionId}
    </update>

    <select id="pageByTagIds" resultType="com.longoj.top.domain.entity.Question">
        <if test="tagIds != null and tagIds.size() > 0">
            <bind name="tagCount" value="tagIds.size()"/>
        </if>
        SELECT <include refid="Base_Column_List"/>
        FROM question
        WHERE is_delete = 0
        <if test="difficulty != null">
            AND difficulty = #{difficulty}
        </if>
        <if test="searchKey != null and searchKey != ''">
            AND (title LIKE CONCAT('%', #{searchKey}, '%')
            OR content LIKE CONCAT('%', #{searchKey}, '%'))
        </if>
        <if test="tagIds != null and tagIds.size() > 0">
            AND (
                SELECT COUNT(DISTINCT qt.tag_id)
                FROM question_tag qt
                WHERE qt.question_id = question.id
                AND qt.tag_id IN
                <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
                    #{tagId}
                </foreach>
            ) = #{tagCount}
        </if>
        ORDER BY create_time DESC
    </select>

</mapper>
